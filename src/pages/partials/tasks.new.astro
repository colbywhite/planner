---
export const partial = true
const week = Astro.url.searchParams.get('week')
const season = Astro.url.searchParams.get('season')
---

<form action="/api/tasks.new" method="post" class="two-input-form-grid w-full gap-4">
    <input type="hidden" name="week" value={week}/>
    <input type="hidden" name="season" value={season}/>
    <!--TODO: better emoji picker-->
    <label class="form-control two-input-form-grid-input-one">
        <div class="label">
            <span class="label-text">Emoji</span>
        </div>
        <select name="emoji" aria-label="Emoji"
                class="select select-bordered">
            <option>🟠</option>
            <option>🔵</option>
            <option>🟡</option>
            <option>🟢</option>
            <option>🎓</option>
        </select>
    </label>
    <label class="form-control two-input-form-grid-input-two">
        <div class="label">
            <span class="label-text">Task name</span>
        </div>
        <input type="text" name="name" placeholder="Task name" aria-label="Task"
               class="input input-bordered"/>
    </label>
    <button type="submit" class="btn btn-outline btn-primary two-input-form-grid-btn">Add task</button>
</form>
