---
export const partial = true
const block_id = Astro.url.searchParams.get('block_id')
---

<form action="/api/tasks.new" method="post" class="flex flex-row gap-4 items-center">
    <input type="hidden" name="block_id" value={block_id}/>
    <!--TODO: better emoji picker-->
    <select name="emoji" aria-label="Emoji"
            class="select select-bordered w-full max-w-xs bg-slate-300">
        <option disabled selected>Emoji</option>
        <option>🟠</option>
        <option>🔵</option>
        <option>🟡</option>
        <option>🟢</option>
        <option>🎓</option>
    </select>
    <input type="text" name="name" placeholder="Add task" aria-label="Task"
           class="input input-bordered input-sm w-full max-w-xs bg-slate-300"/>
    <button type="submit" class="btn btn-primary">Add task</button>
</form>
