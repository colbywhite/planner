---
import '../base.css'
import {ViewTransitions} from 'astro:transitions';
import NavBar from "../components/navbar.astro";
interface Props {
    title?: string
}
const {title = 'Planner'} = Astro.props;

const {user} = Astro.locals
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <meta name="generator" content={Astro.generator}/>
    <ViewTransitions/>
    <title>{title}</title>
</head>
<body class="h-screen bg-base-100 m-4 antialiased w-96 mx-auto">
<NavBar title={title} avatarUrl={user?.user_metadata?.avatar_url} name={user?.user_metadata?.full_name} />
<slot />
<script>
    import 'emoji-picker-element';
</script>
</body>
</html>
